{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "html/html-extensions": [".html",".ract"]
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
#!/usr/bin/python

import os
from subprocess import call

saved_path = os.getcwd()
path = os.path.join(saved_path, 'src').replace('\\','/')

for i in os.listdir(path):
    fulldir = '%s/%s' % (path, i)
    if os.path.isdir(fulldir):
        os.chdir(fulldir)
        print fulldir
        call(['git', '--work-tree=%s' % fulldir, '--git-dir=%s/.git' % fulldir, 'pull'])

os.chdir(saved_path)
